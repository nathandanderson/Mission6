@{
    ViewData["Title"] = "Movie Input";
}

@model Mission6.Models.Task

<h1>Fill out a Task Here</h1>

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label>Task:</label>
        <input asp-for="TaskName" /><br />

        <label>Due Date:</label>
        <input asp-for="DueDate" /><br />

        <label>Quadrant:</label>
        <input asp-for="Quadrant" /><br />

        <label>Category:</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select>

        <label>Completed:</label>
        <select asp-for="Completed">
            <option value="true">True</option>
            <option value="false">False</option>
        </select><br />

        <button type="submit">Submit Task</button>
    </form>
    <br />
    <div>
        <a asp-controller="Home" asp-action="Quadrants" class="btn">Back to Quadrant</a>
    </div>
</div>